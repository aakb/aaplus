{% extends 'AppBundle::base.html.twig' %}

{% block body -%}
  {% if calculation_changes %}
    <div class="alert alert-warning">
      <p>{{ 'Calculations have changed' | trans }}</p>
      {% for message in calculation_changes %}
        <p>
          {{ message.property | trans }}:
          {{ message.oldValue | format_decimal }} → {{ message.newValue | format_decimal }}
          ({{ message.oldValue }} → {{ message.newValue }})
        </p>
      {% endfor %}
    </div>
  {% endif %}

  <div class="row heading">
    <div class="col-md-8">
      <h1>{{ 'vinduetiltagdetail.actions.edit' | trans }}</h1>
    </div>
    <div class="col-md-4 text-right">
      {% if is_granted('ROLE_RAPPORT_EDIT') %}
        {{ form(delete_form) }}
      {% endif %}
    </div>
  </div>

  {{ form_start(edit_form, { 'style': '' }) }}
  {{ form_row(edit_form.tilvalgt) }}
  {{ form_row(edit_form.ikkeElenaBerettiget) }}
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">{{ 'common.generelt' | trans }}</h3>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-6">
          {{ form_row(edit_form.laastAfEnergiraadgiver) }}
          {{ form_row(edit_form.typePlaceringJfPlantegning) }}
          {{ form_row(edit_form.orientering) }}
        </div>
        <div class="col-md-6">
          {{ form_row(edit_form.levetidAar) }}
          {{ form_row(edit_form.noterTilPrisfaktorValgteLoesningTiltagSpecielleForholdPaaStedet) }}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'appbundle.vinduetiltagdetail.vindue' | trans }}</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-6">
              {{ form_row(edit_form.antalStk) }}
              {{ form_row(edit_form.hoejdeElLaengdeM) }}
              {{ form_row(edit_form.uEksWM2K) }}
              {{ form_row(edit_form.solenergitransmittansEks) }}
            </div>
            <div class="col-md-6">
              {{ form_row(edit_form.breddeM) }}
              {{ form_row(edit_form.uNyWM2K) }}
              {{ form_row(edit_form.solenergitransmittansNy) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">{{ 'common.oekonomi' | trans }}</h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-md-6">
              {{ form_row(edit_form.klimaskaerm) }}
              {{ form_row(edit_form.yderligereBesparelserPct) }}
            </div>
            <div class="col-md-6">
              {{ form_row(edit_form.prisfaktor) }}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  {{ form_rest(edit_form) }}
  {{ form_end(edit_form) }}


{% endblock %}
