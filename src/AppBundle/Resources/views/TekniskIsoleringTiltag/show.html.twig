{% extends 'AppBundle:Tiltag:show.html.twig' %}

{% block body -%}
  {{ parent() }}
{% endblock %}

{% block detailark -%}
  <div class="row">
    <div class="col-md-12">
			<div class="table-responsive">
				<table class="table table-header-rotated table-hover">
					<thead>
						<tr>
							<th class="rotate"><div><span>{{ 'appbundle.tiltagdetail.tilvalgt' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.laastAfEnergiraadgiver' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.beskrivelseType' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.type' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.driftstidTAar' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.udvDiameterMm' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.eksistIsolMm' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.roerstoerrelseMmAekvivalent' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.tankVolL' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.tempOmgivelC' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.tempMedieC' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.roerlaengdeEllerHoejdeAfVvbM' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.nyttiggjortVarme' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.nyIsolMm' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.varmeledningsevnePaaEksistIsoleringWMK' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.varmeledningsevnePaaNyIsoleringWMK' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.arealAfBeholderM2' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.standardinvestKrM2EllerKrM' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.prisfaktor' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.investeringKr' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.eksistVarmetabKwh' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.nytVarmetabKwh' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.varmebespKwhAar' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.simpelTilbagebetalingstidAar' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.nutidsvaerdiSetOver15AarKr' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.kwhBesparelseElFraVaerket' | trans }}</span></div></th>
							<th class="rotate"><div><span>{{ 'appbundle.tekniskisoleringtiltagdetail.kwhBesparelseVarmeFraVaerket' | trans }}</span></div></th>
							<th class="rotate"><div><span></span></div></th>
						</tr>
					</thead>
					<tbody>
						{% for detail in entity.details %}
							<tr>
								<td>{{ detail.tilvalgt | b2icon }}</td>
								<td>{{ detail.laastAfEnergiraadgiver | b2icon }}</td>
								<td>{{ detail.beskrivelseType }}</td>
								<td>{{ detail.type }}</td>
								<td>{{ detail.driftstidTAar | format_decimal(0) }}</td>
								<td>{{ detail.udvDiameterMm | format_decimal }}</td>
								<td>{{ detail.eksistIsolMm | format_decimal }}</td>
								<td>{{ detail.roerstoerrelseMmAekvivalent | format_decimal }}</td>
								<td>{{ detail.tankVolL | format_decimal }}</td>
								<td>{{ detail.tempOmgivelC | format_decimal }}</td>
								<td>{{ detail.tempMedieC | format_decimal }}</td>
								<td>{{ detail.roerlaengdeEllerHoejdeAfVvbM | format_decimal }}</td>
								<td>{{ detail.nyttiggjortVarme | format_decimal }}</td>
								<td>{{ detail.nyIsolMm | format_decimal }}</td>
								<td>{{ detail.varmeledningsevnePaaEksistIsoleringWMK | format_decimal }}</td>
								<td>{{ detail.varmeledningsevnePaaNyIsoleringWMK | format_decimal }}</td>
								<td>{{ detail.arealAfBeholderM2 | format_decimal }}</td>
								<td>{{ detail.standardinvestKrM2EllerKrM | format_decimal }}</td>
								<td>{{ detail.prisfaktor | format_decimal }}</td>
								<td>{{ detail.investeringKr | format_decimal }}</td>
								<td>{{ detail.eksistVarmetabKwh | format_decimal }}</td>
								<td>{{ detail.nytVarmetabKwh | format_decimal }}</td>
								<td>{{ detail.varmebespKwhAar | format_decimal }}</td>
								<td>{{ detail.simpelTilbagebetalingstidAar | format_decimal }}</td>
								<td>{{ detail.nutidsvaerdiSetOver15AarKr | format_decimal }}</td>
								<td>{{ detail.kwhBesparelseElFraVaerket | format_decimal }}</td>
								<td>{{ detail.kwhBesparelseVarmeFraVaerket | format_decimal }}</td>
								<td>
									<a href="{{ path('tiltag_detail_show', { 'id': detail.id }) }}" class="btn btn-primary btn-xs">{{ 'common.show' | trans }}</a>
									<a href="{{ path('tiltag_detail_edit', { 'id': detail.id }) }}" class="btn btn-default btn-xs">{{ 'common.edit' | trans }}</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
    </div>
  </div>

  {% form_theme create_detail_form 'AppBundle:Form:modal-form.html.twig' %}
  {{ form(create_detail_form) }}

{% endblock %}
