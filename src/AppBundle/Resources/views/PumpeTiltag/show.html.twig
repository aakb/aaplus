{% extends 'AppBundle:Tiltag:show.html.twig' %}

{% block body -%}
  {{ parent() }}
{% endblock %}

{% block detailark -%}
  <div class="row">
    <div class="col-md-12">
      <table class="table table-header-rotated">
        <thead>
        <tr>
          <th class="rotate"><div><span>{{ 'appbundle.tiltag.tilvalgt' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.pumpeID' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.forsyningsomraade' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.placering' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.applikation' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.isoleringskappe' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.bfaktor' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.noter' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.eksisterendeDrifttid' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.nyDrifttid' | trans }}</span></div></th>
          <th class="rotate"><div><span>{{ 'appbundle.pumpetiltag.prisfaktor' | trans }}</span></div></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        {% for detail in entity.details %}
          <tr>
            <td>{{ detail.tilvalgt | b2icon }}</td>
            <td>{{ detail.pumpeID }}</td>
            <td>{{ detail.forsyningsomraade }}</td>
            <td>{{ detail.placering }}</td>
            <td>{{ detail.applikation }}</td>
            <td>{{ detail.isoleringskappe | b2icon }}</td>
            <td>{{ detail.bfaktor }}</td>
            <td>{{ detail.noter }}</td>
            <td>{{ detail.eksisterendeDrifttid }}</td>
            <td>{{ detail.nyDrifttid }}</td>
            <td>{{ detail.prisfaktor }}</td>
            <td>
              <a href="{{ path('tiltag_detail_show', { 'id': detail.id }) }}" class="btn btn-primary btn-xs">{{ 'common.show' | trans }}</a>
              <a href="{{ path('tiltag_detail_edit', { 'id': detail.id }) }}" class="btn btn-default btn-xs">{{ 'common.edit' | trans }}</a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    </div>
  </div>

  {% form_theme create_detail_form 'AppBundle:Form:modal-form.html.twig' %}
  {{ form(create_detail_form) }}



{% endblock %}
