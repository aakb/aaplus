{% extends 'AppBundle:Tiltag:show.html.twig' %}

{% block body -%}
  {{ parent() }}
{% endblock %}

{% block detailark -%}
  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-header-rotated table-hover">
          <thead>
            <tr>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.laastAfEnergiraadgiver' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.tiltagdetail.tilvalgt' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tiltagsnr' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tiltagsnrDelpriser' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.typePlaceringJfPlantegning' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.hoejdeElLaengdeM' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.breddeM' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.antalStk' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.arealM2' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.andelAfArealDerEfterisoleres' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.uEksWM2K' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.uNyWM2K' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tIndeC' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tUdeC' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tOpvarmningTimerAar' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.yderligereBesparelserPct' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.besparelseKWhAar' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.samletBesparelseKWhAarInklDelbesparelser' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.priskategori' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.prisfaktor' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.delprisKrM2' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.samletInvesteringKr' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.simpelTilbagebetalingstidAar' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.noterTilPrisfaktorValgteLoesningTiltagSpecielleForholdPaaStedet' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tilSortering' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tilSummeringAfDelpriser' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.levetidAar' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.vaegtetGnm' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.vaegtetLevetidForTiltagetAfrundet' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.faktorForReinvestering' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.nutidsvaerdiSetOver15AarKr' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.kWhBesparElvaerkEksternEnergikilde' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.kWhBesparVarmevaerkEksternEnergikilde' | trans }}</span></div></th>
              <th class="rotate"><div><span>{{ 'appbundle.klimaskaermtiltagdetail.tilvalgteDeltiltag' | trans }}</span></div></th>
            </tr>
          </thead>
          <tbody>
            {% for detail in entity.details %}
              <tr>
                <td>{{ detail.laastAfEnergiraadgiver | b2icon }}</td>
                <td>{{ detail.tilvalgt | b2icon }}</td>
                <td>{{ detail.tiltagsnr }}</td>
                <td>{{ detail.tiltagsnrDelpriser }}</td>
                <td>{{ detail.typePlaceringJfPlantegning }}</td>
                <td>{{ detail.hoejdeElLaengdeM | format_decimal }}</td>
                <td>{{ detail.breddeM | format_decimal }}</td>
                <td>{{ detail.antalStk | format_integer }}</td>
                <td>{{ detail.arealM2 | format_decimal }}</td>
                <td>{{ detail.andelAfArealDerEfterisoleres | format_decimal }}</td>
                <td>{{ detail.uEksWM2K | format_decimal }}</td>
                <td>{{ detail.uNyWM2K | format_decimal }}</td>
                <td>{{ detail.tIndeC | format_decimal }}</td>
                <td>{{ detail.tUdeC | format_decimal }}</td>
                <td>{{ detail.tOpvarmningTimerAar | format_decimal }}</td>
                <td>{{ detail.yderligereBesparelserPct | format_percent }}</td>
                <td>{{ detail.besparelseKWhAar | format_decimal }}</td>
                <td>{{ detail.samletBesparelseKWhAarInklDelbesparelser | format_decimal }}</td>
                <td>{{ detail.priskategori }}</td>
                <td>{{ detail.prisfaktor | format_decimal }}</td>
                <td>{{ detail.delprisKrM2 | format_decimal }}</td>
                <td>{{ detail.samletInvesteringKr | format_decimal }}</td>
                <td>{{ detail.simpelTilbagebetalingstidAar | format_decimal }}</td>
                <td>{{ detail.noterTilPrisfaktorValgteLoesningTiltagSpecielleForholdPaaStedet }}</td>
                <td>{{ detail.tilSortering }}</td>
                <td>{{ detail.tilSummeringAfDelpriser }}</td>
                <td>{{ detail.levetidAar | format_decimal }}</td>
                <td>{{ detail.vaegtetGnm | format_decimal }}</td>
                <td>{{ detail.vaegtetLevetidForTiltagetAfrundet | format_decimal }}</td>
                <td>{{ detail.faktorForReinvestering | format_decimal }}</td>
                <td>{{ detail.nutidsvaerdiSetOver15AarKr | format_decimal }}</td>
                <td>{{ detail.kWhBesparElvaerkEksternEnergikilde | format_decimal }}</td>
                <td>{{ detail.kWhBesparVarmevaerkEksternEnergikilde | format_decimal }}</td>
                <td>{{ detail.tilvalgteDeltiltag | format_decimal }}</td>
                <td>
                  <a href="{{ path('tiltag_detail_show', { 'id': detail.id }) }}" class="btn btn-primary btn-xs">{{ 'common.show' | trans }}</a>
                  <a href="{{ path('tiltag_detail_edit', { 'id': detail.id }) }}" class="btn btn-default btn-xs">{{ 'common.edit' | trans }}</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  {% form_theme create_detail_form 'AppBundle:Form:modal-form.html.twig' %}
    {{ form(create_detail_form) }}

{% endblock %}
