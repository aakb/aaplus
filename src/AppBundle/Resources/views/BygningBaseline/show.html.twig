{% extends 'AppBundle::base.html.twig' %}


{% block body -%}
  <div class="row heading">
    <div class="col-md-9">
      <h1>{{ 'baseline.labels.singular' | trans }}</h1>
    </div>
    <div class="col-md-3 text-right">
      <a class="btn btn-default btn-default" href="{{ path('bygning_baseline_edit', { 'id': entity.bygning.id }) }}">{{ icon('edit') }} {{ 'baseline.actions.edit' | trans }}</a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">{{ icon('cube') }} {{ 'appbundle.baseline.opsummering' | trans }}</div>
        <table class="table table-condensed">
          <thead>
          <tr class="text-center">
            <th></th>
            <th>{{ 'appbundle.baseline.baselineFraUdbud' | trans }}</th>
            <th>{{ 'appbundle.baseline.korrektionFraBesigtigelse' | trans }}</th>
            <th>{{ 'appbundle.baseline.baselineTilRaadgiver' | trans }}</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <tr>
            <th>{{ 'appbundle.baseline.el' | trans }}</th>
            <td></td>
            <td></td>
            <td></td>
            <td>{{ 'appbundle.baseline.elBaselineFastsatForEjendom.unit' | trans }}</td>
          </tr>
          <tr>
            <th>{{ 'appbundle.baseline.varmeGAFForbrug' | trans }}</th>
            <td></td>
            <td></td>
            <td></td>
            <td>{{ 'appbundle.baseline.varmeGAFForbrug.unit' | trans }}</td>
          </tr>
          <tr>
            <th>{{ 'appbundle.baseline.varmeGUFForbrug' | trans }}</th>
            <td></td>
            <td></td>
            <td></td>
            <td>{{ 'appbundle.baseline.varmeGUFForbrug.unit' | trans }}</td>
          </tr>
          <tr>
            <th>{{ 'appbundle.baseline.varmeStrafafkoelingsafgift' | trans }}</th>
            <td></td>
            <td></td>
            <td></td>
            <td>{{ 'appbundle.baseline.varmeStrafafkoelingsafgift.unit' | trans }}</td>
          </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-md-12">
      {% if entity.korrektioner is not empty %}
        <div class="panel panel-default">
          <div class="panel-heading">{{ icon('sliders') }} {{ 'appbundle.baseline.korrektioner' | trans }}</div>
          <table class="table table-condensed">
            <thead>
            <tr>
              <th></th>
              <th></th>
              <th colspan="3" class="text-center">{{ 'appbundle.baselinekorrektion.aarligkorrektion' | trans }}</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
            <tr class="text-center">
              {{ helper.header('appbundle.baselinekorrektion.indvirkning') }}
              {{ helper.header('appbundle.baselinekorrektion.datoForImplementering') }}
              {{ helper.header('appbundle.baselinekorrektion.beskrivelse') }}
              {{ helper.header('appbundle.baselinekorrektion.korrektionEl') }}
              {{ helper.header('appbundle.baselinekorrektion.korrektionGAF') }}
              {{ helper.header('appbundle.baselinekorrektion.korrektionGUF') }}
              {{ helper.header('appbundle.baselinekorrektion.kilde') }}
              {{ helper.header() }}
            </tr>
            <tr>
              {{ helper.header_unit('appbundle.baselinekorrektion.indvirkning') }}
              {{ helper.header_unit('appbundle.baselinekorrektion.datoForImplementering') }}
              {{ helper.header_unit('appbundle.baselinekorrektion.beskrivelse') }}
              {{ helper.header_unit('appbundle.baselinekorrektion.korrektionEl') }}
              {{ helper.header_unit('appbundle.baselinekorrektion.korrektionGAF') }}
              {{ helper.header_unit('appbundle.baselinekorrektion.korrektionGUF') }}
              {{ helper.header_unit('appbundle.baselinekorrektion.kilde') }}
              {{ helper.header_unit() }}
            </tr>
            </thead>
            <tbody>
            {% for k in entity.korrektioner %}
              <tr>
                <td>{{ k.indvirkning | b2icon }}</td>
                <td>
                  {% if k.datoForImplementering is not empty %}
                    {{ k.datoForImplementering | date('Y-m-d') }}
                  {% endif %}
                </td>
                <td>{{ k.beskrivelse }}</td>
                <td class="number">{{ k.korrektionEl }}</td>
                <td class="number">{{ k.korrektionGAF }}</td>
                <td class="number">{{ k.korrektionGUF }}</td>
                <td>{{ k.kilde }}</td>
                <td class="text-right">
                  <a class="btn btn-default btn-xs" href="{{ path('baselinekorrektion_edit', { 'id': k.id }) }}">{{ 'common.edit' | trans }}</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      {% else %}
        <div class="alert alert-info" role="alert">{{ 'baselinekorrektioner.strings.ingen' | trans }}</div>
      {% endif %}
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 text-right">
      <form method="POST" action="{{ path('baseline_korrektion_create', { 'id': entity.bygning.id }) }}" class="inline-block">
        <button type="submit" class="btn btn-default">{{ icon('plus') }} {{ ('baselinekorrektioner.actions.add') | trans }}</button>
      </form>
    </div>
  </div>


{% endblock %}

