{% block extends %}
  {{ "{% extends 'AppBundle::base.html.twig' %}" }}
{% endblock extends %}

{% block body %}
  {{ "{% block body -%}" }}

  <div class="row heading">
    <div class="col-md-9">
        <h1>{{ "{{ '" }}{{ entity | replace({'\\' : "."}) | lower }}{{ ".labels.plural' | trans }}" }}</h1>
    </div>
    <div class="col-md-3 text-right">
      {% if 'new' in actions %}
        <a class="btn btn-default" href="{{ "{{ path('" ~ route_name_prefix ~ "_new') }}" }}">
          {{ "{{ icon('plus') }}" }} {{ "{{ '" }}{{ entity | replace({'\\' : "."}) | lower }}{{ ".actions.add' | trans }}" }}
        </a>
      {% endif %}
    </div>

  </div>


  <table class="table table-condensed table-header-rotated">
    <thead>
    <tr>

      {%- for field, metadata in fields %}

        {{ "{{ helper.header('appbundle." }}{{ entity | replace({'\\' : "."}) | lower }}{{ "." }}{{ field }}{{ "') }}" }}

      {%- endfor %}

      {{ "{{ helper.header() }}" }}
    </tr>
    <tr>

      {%- for field, metadata in fields %}

        {{ "{{ helper.header_unit('appbundle." }}{{ entity | replace({'\\' : "."}) | lower }}{{ "." }}{{ field }}{{ "') }}" }}

      {%- endfor %}

      {{ "{{ helper.header_unit() }}" }}
    </tr>
    </thead>
    <tbody>
    {{ '{% for entity in entities %}' }}
    <tr>

      {%- for field, metadata in fields %}

        <td>{{ '{{ entity.' ~ field|replace({'_': ''}) ~ ' }}' }}</td>

        {%- if loop.last %}

          <td class="text-right">
            {%- include "crud/views/others/actions.html.twig.twig" %}
          </td>

        {%- endif %}
      {%- endfor %}

    </tr>
    {{ '{% endfor %}' }}
    </tbody>
  </table>

  {{ "{% endblock %}" }}
{% endblock body %}
